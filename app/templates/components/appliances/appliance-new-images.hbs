<div class="panel panel-warning">
    <div class="panel-heading">
        List New Appliance
    </div>
    <div class="panel-body">
        <form>
            <div class="form-group">
                {{appliances.newItem.model}}
            </div>
            <div class="form-group">
                {{appliances.newItem.description}}
            </div>
            <div class="form-group">
                {{image-input fileChanged="fileSelectionChanged"}}
            </div>
            {{#link-to 'appliances.new' tag="a" class="btn btn-default btn-sm"}}Back{{/link-to}}
            <button type="submit" class="btn btn-warning btn-sm" {{action 'next'}}>Upload</button>
            <button type="button" class="btn btn-warning btn-sm" {{action 'submit' appliances.newItem}}>Submit</button>
            <button type="button" class="btn btn-default btn-sm" {{action 'cancel'}}>Cancel</button>
        </form>
    </div>
</div>