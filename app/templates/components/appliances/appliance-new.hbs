<div class="panel panel-warning">
    <div class="panel-heading">
        List New Appliance
    </div>
    <div class="panel-body">
        <form>
            <div class="form-group">
                {{input type="text" value=appliances.newItem.model class="form-control" placeholder="Model"}}
            </div>
            <div class="form-group">
                {{textarea value=appliances.newItem.description class="form-control" placeholder="Description"}}
            </div>
            <div class="form-group">
                <div class="form-control" style="height:auto;">
                    <ul class="list-inline">
                        <li>Upload Appliance Images:</li>
                        <li>{{file-input fileChanged="fileSelectionChanged"}}</li>
                    </ul>
                    {{#each appliances.newItem.files as |file|}}
                        <img src="{{file.dataURL}}" height="100">
                    {{/each}}
                </div>
            </div>
            <button type="submit" class="btn btn-warning btn-sm" {{action 'submit' appliances.newItem}}>Submit</button>
            <button type="button" class="btn btn-default btn-sm" {{action 'cancel'}}>Cancel</button>
        </form>
    </div>
</div>