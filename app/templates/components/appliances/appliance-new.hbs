<div class="panel panel-warning">
    <div class="panel-heading">
        List New Appliance
    </div>
    <div class="panel-body">
        <form>
            <div class="form-group">
                {{input type="text" value=appliances.newItem.model class="form-control" placeholder="Model"}}
            </div>
            <div class="form-group">
                {{input type="text" value=appliances.newItem.description class="form-control" placeholder="Description"}}
            </div>
            <button type="submit" class="btn btn-warning btn-sm" {{action 'next'}}>Next</button>
            <button type="button" class="btn btn-default btn-sm" {{action 'cancel'}}>Cancel</button>
        </form>
    </div>
</div>