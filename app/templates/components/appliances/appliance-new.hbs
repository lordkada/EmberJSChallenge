<div class="panel panel-default">
    <div class="panel-heading">
        Add New Appliance
    </div>
    <div class="panel-body">
        <form>
            <div class="form-group">
                {{input type="text" value=appliances.newItem.model class="form-control" placeholder="Model"}}
            </div>
            <div class="form-group">
                {{input type="text" value=appliances.newItem.description class="form-control" placeholder="Description"}}
            </div>
            <button type="submit" class="btn btn-default" {{action 'save' appliances.newItem}}>Submit</button>
        </form>
    </div>
</div>